<body>

    <div>
      <div class="col-md-12 col-centered text-center">
        <iframe width="853" height="480" src="https://www.youtube.com/embed/<%= video.video %>" frameborder="0" allowfullscreen></iframe>
      </div>
      <div class="description text-center" id="video-text">
        <p><%= video.title %> </p>
        <p> <%= video.description %> </p>
      </div>
    </div>


    <div class="buttons">
      <div class="button1">
        <button type="submit" class="button"><a href="/videos/<%= video._id %>/edit">EDIT</a></button>
      </div>

      <div class="button2">
        <form method="post" action="/videos/<%= video.id %>">
          <input type="hidden" name="_method" value="delete">
          <button type="submit" class="button">DELETE</button>
        </form>
      </div>
    </div>
</body>
