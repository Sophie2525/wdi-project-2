<h1>Update Media</h1>

<form method="post" action="/venues/<%= venue._id %>">
  <input type="hidden" name="_method" value="put">

  <label for="title">Title</label>
  <input type="text" id="title" name="title" value="<%= venue.title %>">

  <label for="description">Description</label>
  <textarea id="description" name="description"><%= venue.description %></textarea>

  <label for="image">Image Link</label>
  <input type="text" id="image" name="image" value="<%= venue.image %>">

  <label for="location">Location</label>
  <input type="text" id="location" name="location" value="<%= venue.location %>">

  <label for="latitude">Latitude</label>
  <input type="text" id="latitude" name="latitude" value="<%= venue.lat %>">

  <label for="longitude">Longitude</label>
  <input type="text" id="longitude" name="longitude" value="<%= venue.lng %>">

  <input type="submit" value="Submit">
</form>
